{
  "name": "meal-planning-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "preinstall": "node ./scripts/block-npm-install.js",
    "client": "npm --prefix client run dev",
    "server": "npm --prefix server run dev",
    "lint": "npm --prefix client run lint",
    "dev:client": "npm --prefix client run dev",
    "dev:server": "npm --prefix server run dev",
    "dev:all": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "add:dep": "node ./scripts/add-dependencies.js .",
    "add:dep:client": "node ./scripts/add-dependencies.js client",
    "add:dep:server": "node ./scripts/add-dependencies.js server",
    "test:client": "npm --prefix client test",
    "test:server": "npm --prefix server test",
    "test:all": "npm run test:client && npm run test:server"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.20.0",
    "@aws-amplify/backend-cli": "^1.8.2",
    "aws-cdk-lib": "^2.234.1",
    "concurrently": "^9.2.1",
    "constructs": "^10.4.5",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "aws-amplify": "^6.16.0"
  }
}
